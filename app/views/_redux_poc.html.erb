<%= javascript_pack_tag 'redux-poc' %>

<section style="margin-top: 80px; border-top: 1px solid #efefef">
  <h1>Redux POC</h1>
  <p>
    Clicked: <span id="value">0</span> times
    <button class="btn btn-default" id="increment">+</button>
    <button class="btn btn-default" id="decrement">-</button>
    <button class="btn btn-default" id="incrementIfOdd">Increment if odd</button>
    <button class="btn btn-default" id="incrementAsync">Increment async</button>
  </p>
</section>
